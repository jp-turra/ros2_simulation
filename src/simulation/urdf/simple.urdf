<?xml version="1.0"?>
<robot name="simple">

  <link name="base_link">
    <inertial>
      <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
      <mass value="10"/>
      <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
    </inertial>
    <visual>
      <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
      <geometry>
        <box size="0.25 0.5 0.1"/>
      </geometry>
      <material>
        <color rgba="0.0 1.0 0.0 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
      <geometry>
        <box size="0.25 0.5 0.1"/>
      </geometry>
    </collision>
  </link>

  <link name="right_back_wheel">
    <inertial>
      <origin xyz="0.3 0.35 0.0" rpy="0.0 1.5707 0.0"/>
      <mass value="1.0"/>
      <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
    </inertial>
    <visual>
      <origin xyz="0.3 0.35 0.0" rpy="0.0 1.5707 0.0"/>
      <geometry>
        <cylinder radius="0.1" length="0.35"/>
      </geometry>
      <material>
        <color rgba="1.0 0.0 0.0 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0.3 0.35 0.0" rpy="0.0 1.5707 0.0"/>
      <geometry>
        <cylinder radius="0.1" length="0.35"/>
      </geometry>
    </collision>
  </link>

  <joint name="back_right_wheel_to_base" type="revolute">
    <parent link="base_link"/>
    <child link="right_back_wheel"/>
  </joint>

</robot>